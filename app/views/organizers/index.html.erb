<div class="container-fluid wow fadeInLeft animated">

	<div class="col-lg-3">
	<br>
		<div class="panel panel-default  panel-border-black">
			<div class="panel-heading">
				<h3>Vendors in your area</h3>
			</div>

			<div class="panel-body light-blue">
				<ul class="list-unstyled">
					<% @vendors.each do |vendor| %>
						<li>
							<h4 style="display:inline;"> 
								<a href="/organizers/examinevendor/<%= vendor.id  %>" ><%= vendor.first_name  %> <%= vendor.last_name  %>
								</a>
								<% if vendor.name.present? %>
									<%= vendor.name  %>
								<% end %>
							</h4>
						</li>
						<hr>
					<% end %>
				</ul>

			</div>
			
		</div>
	</div>
	
	<div class="col-lg-9">
	<br>
		<div class="panel panel-default light-blue panel-border-black">
			<div class="panel-heading clearfix">
				<a href="<%= organizers_addevent_path  %>" style="color:white;"><button class="btn btn-primary btn-lg pull-right" >Add New Event</button></a>

					<h2 class="pull-left">Events</h2> 
					<br>
				</div>
				<div class="panel-body">
					<% if @events.present? %>
					<% @events.each do |event| %>
						<div class="col-lg-4">
							
								<div class="panel panel-default panel-border-grey ex1 text-center justify-block box-shadow ">
									<div class="panel-heading">
									<a href="/organizer/deleteevent/<%= event.id%>" data-method="delete" class="btn btn-sm btn-danger pull-right">x</a>
										<h4><%= event.name  %> <br> <small><%= event.venue  %></small></h4>

									</div>
									<a href="/organizers/showevent/<%= event.id %>" style='color:black;'>
									<div class="panel-body">
										
										Start time: <%= pretty_date(event.start_date)  %> <br>
										End time: <%= pretty_date(event.end_date)  %> <br>
										<%= event.city  %>, <%= event.state  %> <br>
										<%= event.address %>
										<%= event.zipcode  %>
										
										
									</div>

								</div>
							</a>
						</div>
					<% end %>
					<% end %>
					
			
			</div>

		</div>
	</div>
	

	
</div>
