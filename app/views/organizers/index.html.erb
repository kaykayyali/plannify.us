<div class="container-fluid wow fadeInLeft animated">
	<div class="col-lg-12">
	<br>
		<div class="panel panel-default light-red panel-border-black">
			<div class="panel-heading clearfix">
				

					<h2 class="pull-left">Events</h2> 

					<br>
					<a href="<%= organizers_addevent_path  %>" class= "btn btn-primary btn-md pull-right"style="color:white;">Add New Event</a>
				</div>
				<div class="panel-body">
				<div class="container-fluid">

					
						<% if @events.present? %>
						<% columncounter = 0 %>
						<% @events.each do |event| %>
						<% if columncounter  == 0 %>
							<div class="row">
							
						
						<% end %>
						<% columncounter = columncounter + 1 %>
							<div class="col-lg-4">
								
									<div class="panel panel-default panel-border-grey ex1 text-center justify-block box-shadow  " id="<%= event.id  %>">
										<div class="panel-heading">


										<%= link_to 'X', "/organizer/deleteevent/#{event.id}", data: { :confirm => 'Are you sure?', method: :delete}, remote: true , :class => "btn btn-sm btn-danger pull-right"   %>
										
											<h4><%= event.name  %> <br> <small><%= event.venue  %></small></h4>

										</div>
										<a href="/organizers/showevent/<%= event.id %>" style='color:black;'>
											<div class="panel-body">
												
												Start time: <%= pretty_date(event.start_date)  %> <br>
												End time: <%= pretty_date(event.end_date)  %> <br>
												<%= event.address %>
												<%= event.city  %>, <%= event.state  %> <%= event.zipcode  %> <br>
												
												
												
												
											</div>
										</a>

									</div>
								
							</div>
							<% if columncounter == 3 %>
								
								</div>
							<%  columncounter = 0 %>
							<% end %>
						<% end %>
						<% end %>
						
					</div>
					
			
			</div>

		</div>
	</div>
	

	
</div>



<div class="modal fade" id="vendorsModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Vendors In Your Area</h4>
      </div>
      <div class="modal-body">
      <ul class="list-unstyled">
					<% @vendors.each do |vendor| %>
						<li>
							<h4 style="display:inline;"> 
								<a href="/organizers/examinevendor/<%= vendor.id  %>" ><b><%= vendor.first_name  %> <%= vendor.last_name  %></b>
								</a>
								<% if vendor.name.present? %>
									<%= vendor.name  %>
								<% end %>
							</h4>
						</li>
						<hr>
					<% end %>
				</ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<script>
	$('#navbarUL').append("<li class='navbar-text pull-right'><a href='#'type='button' data-toggle='modal' data-target='#vendorsModal'>View Vendors</a></li>");
</script>
