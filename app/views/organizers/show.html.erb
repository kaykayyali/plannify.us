
<style>body {
	background-color: lightgrey;
	}
	</style>
<%= render './partials/header'  %>

<div class="container">
<div class="jumbotron"><h1>Welcome <%= current_user.first_name  %></h1></div>
	<div class="row">
	
	</div>
	
	
	<div class="panel panel-default light-blue panel-border-black">
		<div class="panel-body">
			<button class="btn btn-primary btn-lg pull-right" ><a href="<%= organizers_addevent_path  %>" style="color:white;">Add New Event</a></button>

				<h3>Here are your events</h3> 
				<br>
				

				<% @events.each do |event| %>
					<div class="col-lg-3">
						<a href="/organizers/showevent/<%= event.id %>" style='color:black;'><div class="panel panel-default panel-border-grey ex1">
							<div class="panel-heading">
								<h4><%= event.name  %> <br> <small><%= event.venue  %></small></h4>
							</div>
							<div class="panel-body">
								
								<%= pretty_date(event.date)  %> <%= event.time.strftime("at %l:%m%p")  %><br>
								<%= event.city  %>, <%= event.state  %> <br>
								<%= event.address %>
								<%= event.zipcode  %>
								
								
							</div>

						</div></a>
					</div>
				<% end %>
				
		
		</div>

	</div>
	

	
</div>
