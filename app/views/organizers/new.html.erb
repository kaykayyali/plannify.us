
<div class="container">
	
	<div class="col-lg-6 col-md-12 wow fadeInLeft animated center-block">
	<h3>Add a new event </h3>
	<br>
		<div class="container-fluid">
		    <div class="col-lg-6 col-md-6 ">
		    	
				<%= form_for :event do |f| %>
					<div class="form-group">
					  <%= f.label :name %>:
					  <%= f.text_field :name, :class => 'form-control' %><br />
					</div>

					<div class="form-group">
					  <%= f.label :date %>:
					  <%= f.datetime_field :date, :class => 'form-control' %><br />
					</div>

					<div class="form-group">
					   <%= f.label :state %>:
					  <%= f.text_field :state, :class => 'form-control' %><br />
					</div>
				</div>
				 <div class="col-lg-6 col-md-6">
					<div class="form-group">
					  <%= f.label :city %>:
					  <%= f.text_field :city, :class => 'form-control' %><br />
					</div>

					<div class="form-group">
					  <%= f.label :zipcode %>:
					  <%= f.text_field :zipcode, :class => 'form-control' %><br />
					</div>

					<div class="form-group">
					  <%= f.label :address %>:
					  <%= f.text_field :address, :class => 'form-control' %><br />
					</div>
					<div class="form-group">
					  <%= f.submit 'Submit', :class => "btn btn-primary"  %>
					</div>
				<% end %>
			</div>
		</div>
</div>


