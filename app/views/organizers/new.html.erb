
<div class="container wow fadeInLeft animated">
	<h3>Add a new event </h3>
	<hr>
	<div class="col-lg-12 col-md-12  center-block">
	
	<br>
		<div class="container-fluid">
		<%= form_for :event do |f| %>

		    <div class="col-lg-5 col-md-6 ">
		    	
				
					<div class="form-group">
					  <%= f.label :name %>:
					  <%= f.text_field :name, :class => 'form-control' %><br />
					</div>

					<div class="form-group">
					  <%= f.label "Start Date" %>:
					  <%= f.date_field :start_date, :class => 'form-control' %><br />
					</div>

					<div class="form-group">
					  <%= f.label "Start Time" %>:
					  <%= f.time_field :start_time, :class => 'form-control' %><br />
					</div>

					<div class="form-group">
					  <%= f.label "end Date" %>:
					  <%= f.date_field :end_date, :class => 'form-control' %><br />
					</div>

				
					<div class="form-group">
					  <%= f.label "end Time" %>:
					  <%= f.time_field :end_time, :class => 'form-control' %><br />
					</div>

				</div>
				 <div class="col-lg-5 col-md-6">

					<div class="form-group">
					  <%= f.label :venue %>:
					  <%= f.text_field :venue, :class => 'form-control' %><br />
					</div>

					<div class="form-group">
					   <%= f.label :state %>:
					  <%= f.text_field :state, :class => 'form-control' %><br />
					</div>

					<div class="form-group">
					  <%= f.label :city %>:
					  <%= f.text_field :city, :class => 'form-control' %><br />
					</div>

					<div class="form-group">
					  <%= f.label :zipcode %>:
					  <%= f.text_field :zipcode, :class => 'form-control' %><br />
					</div>

					<div class="form-group">
					  <%= f.label :address %>:
					  <%= f.text_field :address, :class => 'form-control' %><br />
					</div>
				</div>
				<div class="col-lg-2 col-md-2">
				<br>
					<div class="form-group">
					  <%= f.submit 'Submit', :class => "btn btn-primary btn-lg"  %>
					</div>
				</div>
				
				
			<% end %>
		</div>
</div>


