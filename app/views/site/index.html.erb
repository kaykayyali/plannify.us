<!-- BEGIN HEADER
================================================== -->
<header class="main_h">
	<div class="container">
		<div class="row">
			<a class="logo" href="#home">Plannify.us</a>
			<div class="mobile-toggle">
				<span></span>
				<span></span>
				<span></span>
			</div>
			<nav>
			<ul class="nav">
				<li><a href="#home">Home</a></li>
				<li><a href="#features">How we work</a></li>		
				<li><a href="#contact-page">Contact</a></li>
				<!-- Temp Sign out -->
				<% if current_user.present? %>
				<li><a href="<%=destroy_user_session_path%>" data-method="delete">Sign-Out</a></li>
				<% end %>
			</ul>
			</nav>
		</div>	
	</div>
</header>


<!-- BEGIN HOME
================================================== -->
<section id="home" class="homepage">
	<div class="section-overlay-home"></div>
	<div class="container">
		<div class="row">
		
			
		
			<div class="col-sm-12 text-center">			
				<h1 id="logo">
				<%= image_tag("Logo.png", class: "wow fadeInDown animated",:data =>{"data-wow-delay"=>"0.3s"}) %>
				<br>
				</h1>
				<h1 id="logo-text">
				PLANNIFY.<span class="highlight">US</span>
				</h1>
				<div class="rotate-description wow fadeInLeft animated">
					Plan your <span class="highlight">events</span> with confidence.
				</div>
				
				<div class="home-buttons">
					<a href="<%= new_user_registration_path  %>" class="btn btn-default btn-lg wow slideInLeft animated"><i class="fa fa-link"></i> Sign up</a>    
					<a href="<%= new_user_session_path  %>" class="btn btn-primary btn-lg wow slideInRight animated"><i class="fa fa-download"></i> Login</a>
					<%= link_to "Facebook", user_omniauth_authorize_path(:facebook) , :class => "btn btn-default" %>
				</div>
			</div>
			
		</div><!-- end .row -->
	</div>
	<a href="#features" class="introarrow">
	<i class="fa fa-angle-double-down"></i>
	</a>
</section>
<!-- end home -->


<!-- BEGIN FEATURES
================================================== -->
<section id="features">
	<div class="wrapsection">
		<div class="container">
			<div class="sectionhead">
				<h1 class="heading">How we work</h1>
				<p class="lead">
					Plannify.us is your home for getting freelance events organized. Plannify can connect you with vendors and help you organize your event by coordinating every aspect of the process.
				</p>
			</div>
			<div class="row text-center">		
				<div class="col-sm-4 feature-item wow flipInY animated" data-wow-delay="0.1s">
					<div class="feature-icon">
						<i class="fa fa-eye"></i>
					</div>
					<h4>Event Organizers</h4>
					<p class="description">
						Because why do it the hard way?
					</p>
					<span class="sep"></span>
					<p>
						Once you login in, use your control panel to help you organize your events and coordinate with vendors.
					</p>
				</div>
				<div class="col-sm-4 feature-item wow flipInY animated" data-wow-delay="0.3s">
					<div class="feature-icon">
						<i class="fa fa-cog"></i>
					</div>
					<h4>Vendors</h4>
					<p class="description">
						Reach your clients faster
					</p>
					<span class="sep"></span>
					<p>
						Design your invoices, spend more time catering your clients, and streamline your work page.
					</p>
				</div>
				<div class="col-sm-4 feature-item wow flipInY animated" data-wow-delay="0.6s">
					<div class="feature-icon">
						<i class="fa fa-male"></i>
						<i class="fa fa-female"></i>
					</div>
					<h4>Staff</h4>
					<p class="description">
						No more hassles for your schedule
					</p>
					<span class="sep"></span>
					<p>
						Get access to your schedule as soon as its ready, and work with your employer to reach total synergy.
					</p>
				</div>
			</div><!-- end .row -->
		</div>
	</div>
</section>
<!-- end features -->





